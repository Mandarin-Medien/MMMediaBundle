{% block mmmedia_upload_widget %}
    {% spaceless %}
        <div id="dz_{{ id }}_FormUploader" class="dropzone mmmb-dropzone"
             data-url="{{ path('media_upload') }}"
             data-field-name="{{ full_name }}{% if multiple %}[]{% endif %}"
             data-multiple="{% if multiple %}true{% else %}false{% endif %}"
             data-files="{{ value_media_json|e|raw }}"
        ></div>

        <div class="dropzone dropzone-previews" id="dz_{{ id }}_FormUploader_previews"></div>



    {% endspaceless %}
{% endblock %}