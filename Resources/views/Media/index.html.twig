{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Media list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Copyright</th>
                <th>Author</th>
                <th>Mediatype</th>
                <th>Mediatypereference</th>
                <th>Mediatypemetadata</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('media_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.copyright }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.mediaType }}</td>
                <td>{{ entity.mediaTypeReference }}</td>
                <td>{{ dump(entity.mediaTypeMetadata) }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('media_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('media_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('media_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
